#!/usr/bin/env bake

bake-source projector

projector_rc() {
  local tmp="$(mktemp)"

  cat \
    /etc/bash.bashrc \
    $HOME/.bashrc $1 \
    > $tmp

  echo $tmp
}

PROJECTOR_INIT='bash --rcfile'
PROJECTOR_SOURCE_FILENAME=".local.bashrc"

echo $PROMPT_COMMAND | grep -q 'projector_prompt;' \
  || PROMPT_COMMAND="projector_prompt;$PROMPT_COMMAND"
